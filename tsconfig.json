{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"suppressImplicitAnyIndexErrors": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"./*"
			]
		},
		"types": [
			"vite/client",
			"node",
			"unplugin-icons/types/vue3",
			"naive-ui/volar"
		]
	},
	"exclude": [
		"dist",
		"node_modules"
	],
}